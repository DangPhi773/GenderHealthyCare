@page
@model GenderHealthcareServiceManagementSystemPages.Pages.Questions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.UserId" class="control-label"></label>
                <select asp-for="Question.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Question.ConsultantId" class="control-label"></label>
                <select asp-for="Question.ConsultantId" class ="form-control" asp-items="ViewBag.ConsultantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuestionText" class="control-label"></label>
                <input asp-for="Question.QuestionText" class="form-control" />
