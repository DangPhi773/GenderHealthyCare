@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.TrackingTestingModel
@{
    ViewData["Title"] = "Theo dõi tình trạng xét nghiệm";
}

<h2 class="text-primary mb-4">Lịch sử & Trạng thái xét nghiệm</h2>

<form method="get" class="mb-4">
    <div class="form-inline">
        <label class="mr-2">Lọc theo trạng thái:</label>
        <select name="status" class="form-control mr-2" onchange="this.form.submit()">
            <option value="">-- Tất cả --</option>
            <option value="Pending" selected="@("Pending" == Model.SelectedStatus)">Pending</option>
            <option value="In Progress" selected="@("In Progress" == Model.SelectedStatus)">In Progress</option>
            <option value="Done" selected="@("Done" == Model.SelectedStatus)">Done</option>
        </select>
    </div>
</form>

@if (Model.UserTests.Count == 0)
{
    <div class="alert alert-info">Bạn chưa có lịch xét nghiệm nào.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Dịch vụ</th>
                <th>Ngày xét nghiệm</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model.UserTests)
            {
                <tr>
                    <td>@test.TestId</td>
                    <td>@test.Service?.Name</td>
                    <td>@test.AppointmentTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @switch (test.Status)
                        {
                            case "Pending":
                                <span class="badge badge-warning">Pending</span>
                                break;
                            case "In Progress":
                                <span class="badge badge-info">In Progress</span>
                                break;
                            case "Done":
                                <span class="badge badge-success">Done</span>
                                break;
                            default:
                                <span class="badge badge-secondary">@test.Status</span>
                                break;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
