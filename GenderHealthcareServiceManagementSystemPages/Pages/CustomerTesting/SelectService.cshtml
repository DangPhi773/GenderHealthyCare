@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.SelectServiceModel

@{
    ViewData["Title"] = "Chọn dịch vụ xét nghiệm";
}

<h2 class="text-center text-pink-600 font-bold text-2xl mb-4">Chọn dịch vụ xét nghiệm</h2>

@if (!Model.IsLoggedIn)
{
    <div class="text-red-600 text-center font-semibold">
        Bạn chưa đăng nhập. Vui lòng <a class="text-blue-600 underline" href="/Account/Login">đăng nhập</a> để tiếp tục đặt lịch xét nghiệm.
    </div>
}
else
{
    <form method="post">
        <div class="grid grid-cols-2 gap-4">
            @foreach (var service in Model.Services)
            {
                <div class="border p-4 rounded shadow hover:bg-pink-50">
                    <label>
                        <input type="checkbox" name="SelectedServiceIds" value="@service.ServiceId" />
                        <strong>@service.Name</strong> - @service.Price.ToString("N0") VND
                    </label>
                    <p class="text-sm text-gray-500">@service.Description</p>
                </div>
            }
        </div>

        <div class="mt-6 text-center">
            <button type="submit" class="bg-pink-600 hover:bg-pink-700 text-white px-6 py-2 rounded">
                Tiếp tục
            </button>
        </div>
    </form>
}
