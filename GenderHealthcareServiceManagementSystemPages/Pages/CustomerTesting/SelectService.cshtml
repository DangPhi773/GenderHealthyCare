@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.SelectServiceModel

@{
    ViewData["Title"] = "Chọn dịch vụ xét nghiệm";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<div class="container py-5">
    <div class="text-center mb-5">
        <span class="badge bg-light text-purple border border-purple mb-3 px-3 py-2 fs-6">
            <i class="bi bi-heart-fill text-danger me-2"></i>Gender Healthcare System
        </span>
        <h1 class="display-5 fw-bold text-dark">Chọn dịch vụ xét nghiệm</h1>
        <p class="lead text-muted">Vui lòng chọn một hoặc nhiều dịch vụ bên dưới để tiếp tục đặt lịch.</p>
    </div>

    @if (!Model.IsLoggedIn)
    {
        <div class="text-danger text-center fw-semibold">
            Bạn chưa đăng nhập. Vui lòng <a class="text-decoration-underline text-primary" href="/Login">đăng nhập</a> để tiếp tục đặt lịch xét nghiệm.
        </div>
    }
    else
    {
        <form method="post">
            <div class="row g-4">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-6 col-lg-4">
                        <label class="card h-100 shadow-sm border-0 d-flex flex-column service-card">
                            <input type="checkbox" name="SelectedServiceIds" value="@service.ServiceId"
                                   class="d-none service-checkbox" id="serviceCheckbox_@service.ServiceId" />
                            <div class="card-header bg-white border-bottom-0 py-3">
                                <h5 class="card-title fw-bold text-purple m-0 d-flex align-items-center">
                                    <i class="bi bi-shield-check me-2 text-gradient"></i> @service.Name
                                </h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-text text-muted">@service.Description</p>
                                <ul class="list-unstyled small">
                                    <li class="mb-1">
                                        <i class="bi bi-clock me-2 text-primary"></i>Thời gian: <span class="text-dark">(Cập nhật thủ công)</span>
                                    </li>
                                    <li class="mb-1">
                                        <i class="bi bi-check-circle me-2 text-success"></i>Chất lượng được đảm bảo
                                    </li>
                                    <li class="mb-1">
                                        <i class="bi bi-person-check me-2 text-info"></i>Phù hợp với từng đối tượng
                                    </li>
                                </ul>
                                <div class="bg-light rounded p-3 text-center mt-auto">
                                    <div class="fw-bold fs-5 text-purple">@service.Price.ToString("N0") VND</div>
                                    <small class="text-muted">Giá gói dịch vụ</small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-grid gap-2 text-center">
                                <button type="button" class="btn btn-service-register mb-0" data-service-id="@service.ServiceId">
                                    <i class="bi bi-calendar-check me-2"></i>Đăng ký dịch vụ này
                                </button>
                            </div>
                        </label>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-gradient px-5 py-2">
                    <i class="bi bi-arrow-right-circle me-2"></i> Tiếp tục đặt lịch
                </button>
            </div>
        </form>
    }
</div>

<style>
    .btn-gradient {
        background: linear-gradient(to right, #9333ea, #ec4899);
        color: white;
        border: none;
    }

    .btn-outline-purple {
        border: 1px solid #c084fc;
        color: #9333ea;
        transition: all 0.3s ease;
    }

    .text-purple {
        color: #9333ea;
    }

    .border-purple {
        border-color: #c084fc !important;
    }

    .text-gradient {
        background: linear-gradient(to right, #a855f7, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card-title {
        font-size: 1.1rem;
    }

    .service-card {
        cursor: pointer; /* Giữ cursor pointer cho cả card để báo hiệu có thể click */
        transition: transform 0.2s ease, box-shadow 0.2s ease, border 0.2s ease, background 0.2s ease;
        position: relative;
    }

        .service-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

        .service-card.checked {
            border: 2px solid #9333ea;
            background: linear-gradient(to bottom right, #f3e8ff, #fdf2f8);
            /* --- THÊM DÒNG NÀY ĐỂ CÓ BOX SHADOW KHI CHỌN DỊCH VỤ --- */
            box-shadow: 0 12px 40px rgba(147, 51, 234, 0.4), /* Bóng lớn hơn, đậm hơn */
            0 6px 20px rgba(236, 72, 153, 0.25)!important; /* Bóng nhỏ hơn, đậm hơn */
        }

    /* --- New CSS for the Register Button --- */
    .btn-service-register {
        /* Màu sắc ban đầu */
        color: #9333ea;
        border: 1px solid #c084fc;
        background-color: transparent;
        transition: all 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
        padding: .5rem 1rem;
        font-size: 1rem;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100%; /* Đảm bảo nút chiếm toàn bộ chiều rộng của footer */
    }

        .btn-service-register:hover {
            color: white;
            background: linear-gradient(to right, #a855f7, #ec4899);
            border-color: transparent;
        }

    .btn-service-register-registered {
        /* Màu xanh lá cây sau khi đăng ký */
        color: white;
        background: linear-gradient(to right, #28a745, #218838); /* Gradient xanh lá cây */
        border: 1px solid #28a745;
        cursor: default; /* Thay đổi con trỏ chuột */
    }

        .btn-service-register-registered:hover {
            color: white;
            background: linear-gradient(to right, #28a745, #218838); /* Giữ nguyên màu khi hover */
            border-color: #28a745;
        }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Khởi tạo Toastr options (tùy chọn)
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "preventDuplicates": true
            };

            // Logic cho checkbox và card highlight
            document.querySelectorAll('.service-checkbox').forEach(cb => {
                const card = cb.closest('.service-card');
                const registerButton = card.querySelector('.btn-service-register');

                // Đồng bộ trạng thái checkbox và giao diện card/button khi tải trang
                if (cb.checked) {
                    card.classList.add('checked');
                    if (registerButton) { // Ensure button exists
                        registerButton.classList.remove('btn-service-register');
                        registerButton.classList.add('btn-service-register-registered');
                        registerButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Đã đăng ký dịch vụ này';
                        registerButton.style.pointerEvents = 'none'; // Vô hiệu hóa nút sau khi đăng ký
                        registerButton.style.opacity = '0.7';
                    }
                }

                // Event listener cho checkbox (nếu có click trực tiếp vào checkbox)
                cb.addEventListener('change', function () {
                    if (this.checked) {
                        card.classList.add('checked');
                        if (registerButton && !registerButton.classList.contains('btn-service-register-registered')) {
                            // Cập nhật nút khi checkbox được chọn thủ công
                            registerButton.classList.remove('btn-service-register');
                            registerButton.classList.add('btn-service-register-registered');
                            registerButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Đã đăng ký dịch vụ này';
                            registerButton.style.pointerEvents = 'none';
                            registerButton.style.opacity = '0.7';
                            toastr.success('Dịch vụ đã được chọn!', 'Thông báo');
                        }
                    } else {
                        card.classList.remove('checked');
                        if (registerButton && registerButton.classList.contains('btn-service-register-registered')) {
                            // Đặt lại nút khi checkbox được bỏ chọn
                            registerButton.classList.remove('btn-service-register-registered');
                            registerButton.classList.add('btn-service-register');
                            registerButton.innerHTML = '<i class="bi bi-calendar-check me-2"></i>Đăng ký dịch vụ này';
                            registerButton.style.pointerEvents = 'auto';
                            registerButton.style.opacity = '1';
                            toastr.info('Đã bỏ chọn dịch vụ.', 'Thông báo');
                        }
                    }
                });
            });

            // Logic cho nút "Đăng ký dịch vụ này"
            document.querySelectorAll('.btn-service-register').forEach(button => {
                button.addEventListener('click', function () {
                    const serviceId = this.dataset.serviceId;
                    const checkbox = document.getElementById(`serviceCheckbox_${serviceId}`);
                    const card = this.closest('.service-card');

                    // Chỉ xử lý nếu nút chưa ở trạng thái "đã đăng ký"
                    if (!this.classList.contains('btn-service-register-registered')) {
                        // Kích hoạt checkbox liên quan
                        checkbox.checked = true;
                        checkbox.dispatchEvent(new Event('change')); // Kích hoạt sự kiện change của checkbox

                        // Thay đổi giao diện nút
                        this.classList.remove('btn-service-register');
                        this.classList.add('btn-service-register-registered');
                        this.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Đã đăng ký dịch vụ này';
                        this.style.pointerEvents = 'none'; // Vô hiệu hóa nút
                        this.style.opacity = '0.7';

                        // Highlight card
                        card.classList.add('checked');

                        toastr.success('Bạn đã chọn dịch vụ thành công!', 'Thành công!');

                        // TODO: Nếu bạn muốn gửi AJAX request ngay lập tức khi người dùng click nút
                        // thay vì chỉ khi nhấn nút "Tiếp tục đặt lịch", bạn có thể đặt logic AJAX ở đây.
                        // Ví dụ:
                        // fetch('/api/registerService', {
                        //     method: 'POST',
                        //     headers: {
                        //         'Content-Type': 'application/json'
                        //     },
                        //     body: JSON.stringify({ serviceId: serviceId, action: 'select' })
                        // })
                        // .then(response => response.json())
                        // .then(data => {
                        //     if (data.success) {
                        //         toastr.success('Dịch vụ đã được lưu tạm thời.', 'Thành công');
                        //     } else {
                        //         toastr.error('Có lỗi khi lưu dịch vụ.', 'Lỗi');
                        //         // Nếu có lỗi, rollback trạng thái nút và checkbox
                        //         checkbox.checked = false;
                        //         checkbox.dispatchEvent(new Event('change'));
                        //     }
                        // })
                        // .catch(error => {
                        //     console.error('Lỗi AJAX:', error);
                        //     toastr.error('Lỗi kết nối server.', 'Lỗi');
                        //     checkbox.checked = false;
                        //     checkbox.dispatchEvent(new Event('change'));
                        // });

                    } else {
                        // Nếu nút đã ở trạng thái "đã đăng ký", bạn có thể cho phép bỏ chọn
                        // hoặc hiển thị thông báo. Ở đây, tôi sẽ cho phép bỏ chọn.
                        checkbox.checked = false;
                        checkbox.dispatchEvent(new Event('change')); // Kích hoạt sự kiện change của checkbox

                        this.classList.remove('btn-service-register-registered');
                        this.classList.add('btn-service-register');
                        this.innerHTML = '<i class="bi bi-calendar-check me-2"></i>Đăng ký dịch vụ này';
                        this.style.pointerEvents = 'auto'; // Cho phép click lại
                        this.style.opacity = '1';

                        card.classList.remove('checked');

                        toastr.info('Bạn đã bỏ chọn dịch vụ.', 'Thông báo');
                    }
                });
            });

            // Xử lý khi click vào bất kỳ đâu trên card (trừ nút)
            // Đảm bảo click vào card cũng bật/tắt checkbox
            document.querySelectorAll('.service-card').forEach(card => {
                card.addEventListener('click', function(event) {
                    // Tránh xử lý click nếu event target là nút đăng ký
                    if (event.target.closest('.btn-service-register')) {
                        return;
                    }
                    const checkbox = this.querySelector('.service-checkbox');
                    if (checkbox) {
                        checkbox.checked = !checkbox.checked;
                        checkbox.dispatchEvent(new Event('change')); // Kích hoạt sự kiện change của checkbox
                    }
                });
            });
        });
    </script>
}