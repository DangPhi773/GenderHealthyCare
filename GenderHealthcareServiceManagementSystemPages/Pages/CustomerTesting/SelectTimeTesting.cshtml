@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.SelectTimeTestingModel
@{
    ViewData["Title"] = "Chọn thời gian xét nghiệm";
}

<h2>Chọn thời gian xét nghiệm</h2>

@if (!Model.IsLoggedIn)
{
    <div class="alert alert-warning">
        Bạn chưa đăng nhập. Vui lòng <a href="/login-test">đăng nhập tạm thời</a> để tiếp tục.
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="AppointmentTime">Thời gian hẹn xét nghiệm</label>
        <input asp-for="AppointmentTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <strong>Dịch vụ đã chọn:</strong>
        <ul>
            @foreach (var serviceName in Model.SelectedServiceNames)
            {
                <li>@serviceName</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Tiếp tục</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
