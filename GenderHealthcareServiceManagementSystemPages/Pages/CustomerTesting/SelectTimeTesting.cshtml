@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.SelectTimeTestingModel

@{
    ViewData["Title"] = "Chọn thời gian xét nghiệm";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<main class="py-5" style="background-color: #fff8f9;">
    <div class="container">
        <div class="text-center mb-5">
            <span class="badge bg-light text-purple border border-purple mb-3 px-3 py-2 fs-6">
                <i class="bi bi-calendar-event-fill text-primary me-2"></i>Gender Healthcare System
            </span>
            <h1 class="display-5 fw-bold text-dark">Chọn thời gian xét nghiệm</h1>
            <p class="lead text-muted">Vui lòng chọn ngày giờ phù hợp để tiếp tục đặt lịch xét nghiệm.</p>
        </div>

        @if (!Model.IsLoggedIn)
        {
            <div class="alert alert-warning text-center fw-semibold">
                Bạn chưa đăng nhập. Vui lòng <a href="/login-test" class="text-primary text-decoration-underline">đăng nhập tạm thời</a> để tiếp tục.
            </div>
        }

        <form method="post" class="needs-validation" novalidate>
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label asp-for="AppointmentTime" class="form-label fw-semibold">Thời gian hẹn xét nghiệm</label>
                                <input asp-for="AppointmentTime" class="form-control" type="datetime-local" required
                                       min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <strong class="d-block mb-2 text-purple">Dịch vụ đã chọn:</strong>
                                <ul class="list-group">
                                    @foreach (var serviceName in Model.SelectedServiceNames)
                                    {
                                        <li class="list-group-item">@serviceName</li>
                                    }
                                </ul>
                            </div>

                            <button type="submit" class="btn btn-gradient w-100">
                                <i class="bi bi-arrow-right-circle me-2"></i> Tiếp tục
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-gradient {
        background: linear-gradient(to right, #9333ea, #ec4899);
        color: white;
        border: none;
    }

    .btn-outline-purple {
        border: 1px solid #c084fc;
        color: #9333ea;
    }

    .text-purple {
        color: #9333ea;
    }

    .border-purple {
        border-color: #c084fc !important;
    }

    .text-gradient {
        background: linear-gradient(to right, #a855f7, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
