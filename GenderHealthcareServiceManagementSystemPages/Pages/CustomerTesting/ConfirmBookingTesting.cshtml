@page
@model GenderHealthcareServiceManagementSystemPages.Pages.CustomerTesting.ConfirmBookingTestingModel
@{
    ViewData["Title"] = "Xác nhận đặt lịch";
}

<main class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg p-4" style="backdrop-filter: blur(8px); background-color: rgba(255, 255, 255, 0.8);">
                    <div class="text-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#9333ea" viewBox="0 0 24 24">
                            <path d="M17 3H7a2 2 0 0 0-2 2v16l7-3 7 3V5a2 2 0 0 0-2-2z" />
                        </svg>
                        <h2 class="h4 fw-bold gradient-text mt-3">Xác nhận đặt lịch xét nghiệm</h2>
                        <p class="text-muted small">Kiểm tra lại thông tin trước khi xác nhận.</p>
                    </div>

                    @if (!Model.IsLoggedIn)
                    {
                        <div class="alert alert-warning text-center fw-semibold">
                            Bạn chưa đăng nhập! <a href="/login-test" class="text-primary text-decoration-underline">Đăng nhập tạm thời</a>
                        </div>
                    }

                    <!-- Debug section -->
                    <div class="bg-light p-3 border rounded mb-4">
                        <h6 class="text-muted mb-2"><strong>Debug Session Values:</strong></h6>
                        <div><strong>SelectedServiceIds:</strong> @Model.HttpContext.Session.GetString("SelectedServiceIds")</div>
                        <div><strong>AppointmentTime:</strong> @Model.HttpContext.Session.GetString("AppointmentTime")</div>
                        <div><strong>UserId:</strong> @Model.HttpContext.Session.GetInt32("UserId")</div>
                    </div>

                    @if (Model.User != null)
                    {
                        <div class="mb-4">
                            <h5 class="text-purple-700 fw-bold mb-2">👤 Thông tin người dùng</h5>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Họ tên:</strong> @Model.User.FullName</li>
                                <li class="list-group-item"><strong>Email:</strong> @Model.User.Email</li>
                                <li class="list-group-item"><strong>Điện thoại:</strong> @Model.User.Phone</li>
                                <li class="list-group-item"><strong>Giới tính:</strong> @Model.User.Gender</li>
                                <li class="list-group-item"><strong>Ngày sinh:</strong> @Model.User.Dob?.ToString("dd/MM/yyyy")</li>
                            </ul>
                        </div>
                    }

                    @if (Model.SelectedServiceNames != null && Model.SelectedServiceNames.Any())
                    {
                        <div class="mb-4">
                            <h5 class="text-purple-700 fw-bold mb-2">🧪 Dịch vụ đã chọn</h5>
                            <ul class="list-group">
                                @foreach (var name in Model.SelectedServiceNames)
                                {
                                    <li class="list-group-item">@name</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.AppointmentTime != default(DateTime))
                    {
                        <div class="mb-4">
                            <h5 class="text-purple-700 fw-bold mb-2">⏰ Thời gian xét nghiệm</h5>
                            <div class="border p-2 rounded text-center bg-light">
                                <strong>@Model.AppointmentTime.ToString("HH:mm dd/MM/yyyy")</strong>
                            </div>
                        </div>
                    }

                    <form method="post" class="text-center mt-4">
                        <button type="submit" class="btn w-100" style="background: linear-gradient(to right, #16a34a, #22c55e); color: white;">
                            <i class="bi bi-check-circle-fill me-2"></i> Xác nhận đặt lịch
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
