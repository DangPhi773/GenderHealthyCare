@page
@model GenderHealthcareServiceManagementSystemPages.Pages.StaffTesting.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mt-4 mb-4 text-center text-danger"><i class="bi bi-trash"></i> Delete Test</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-xl border-0 rounded-lg">
            <div class="card-body">
                <h3 class="text-center mb-4">Are you sure you want to delete this test?</h3>

                <div class="mb-3">
                    <h4>Test Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Appointment Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.AppointmentTime)</dd>

                        <dt class="col-sm-3 fw-bold">Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.Status)</dd>

                        <dt class="col-sm-3 fw-bold">Result</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.Result)</dd>

                        <dt class="col-sm-3 fw-bold">Cancel Reason</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.CancelReason)</dd>

                        <dt class="col-sm-3 fw-bold">Created At</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.CreatedAt)</dd>

                        <dt class="col-sm-3 fw-bold">Is Deleted</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.IsDeleted)</dd>

                        <dt class="col-sm-3 fw-bold">Service</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.Service.Name)</dd>

                        <dt class="col-sm-3 fw-bold">User</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Test.User.Email)</dd>
                    </dl>
                </div>

                <form method="post" class="d-flex justify-content-between mt-4">
                    <input type="hidden" asp-for="Test.TestId" />
                    <button type="submit" class="btn btn-danger rounded-pill shadow-sm">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card and Form Styling */
    .card {
        border-radius: 16px;
    }

    .card-body {
        background-color: #f9f9f9;
        padding: 3rem;
    }

    .fw-bold {
        font-weight: bold;
        color: #495057;
    }

    .btn {
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 50px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: scale(1.05);
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
        background-color: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
        transform: scale(1.05);
    }

    .row {
        margin-bottom: 2rem;
    }

    .text-danger {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mt-4 {
        margin-top: 2rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
    .col-md-8 {
        width: 100%;
    }

    .btn {
        width: 100%;
        margin-top: 1rem;
    }

    .row dt,
    .row dd {
        display: block;
        width: 100%;
    }

    .row dt {
        font-weight: bold;
    }
    }

    /* Hover and Focus Effects */
    .btn:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>
