@page
@model GenderHealthcareServiceManagementSystemPages.Pages.ClinicsModel
@{
    ViewData["Title"] = "Danh sách phòng khám";
}

<!-- Gradient Background -->
<div class="min-vh-100 py-5 px-3" style="background: linear-gradient(to bottom right, #f3e8ff, #ffe4f0, #e0f2ff);">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <span class="badge bg-light text-purple-600 fw-semibold px-3 py-2 mb-3">
                <i class="bi bi-heart-fill me-2 text-danger"></i>
                Gender Healthcare System
            </span>
            <h1 class="fw-bold display-5 text-dark">Danh sách phòng khám</h1>
            <p class="text-muted lead">Khám phá các phòng khám chuyên về chăm sóc sức khỏe giới tính</p>
        </div>

        <!-- Search Section (Placeholder) -->
        <div class="bg-white bg-opacity-75 shadow rounded-4 p-4 mb-5">
            <div class="row g-3 align-items-center">
                <div class="col-md">
                    <div class="position-relative">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text" class="form-control ps-5" placeholder="Tìm kiếm phòng khám theo tên, địa chỉ..." />
                    </div>
                </div>
                <div class="col-auto">
                    <button class="btn btn-gradient-purple-pink text-white px-4">
                        <i class="bi bi-funnel-fill me-1"></i>Bộ lọc
                    </button>
                </div>
            </div>
        </div>

        <!-- Clinics Grid -->
        @if (Model.Clinics != null && Model.Clinics.Count > 0)
        {
            <div class="row g-4">
                @foreach (var clinic in Model.Clinics)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-lg bg-white bg-opacity-75">
                            <div class="position-relative" style="height: 200px; overflow: hidden;">
                                <img src="https://i0.wp.com/mcmedical.ca/wp-content/uploads/2019/11/img_1208-min-1.jpg?resize=750%2C563&ssl=1" class="w-100 h-100 object-fit-cover" alt="@clinic.Name" />
                                <span class="badge position-absolute top-0 end-0 m-2 bg-light text-purple-600">⭐ 5</span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-dark">@clinic.Name</h5>
                                <p class="card-text text-muted small">@clinic.Description</p>
                                <div class="mb-2 d-flex align-items-start">
                                    <i class="bi bi-geo-alt-fill me-2 text-purple-600"></i>
                                    <span class="text-muted small">@clinic.Address</span>
                                </div>
                                <div class="mb-2 d-flex align-items-center">
                                    <i class="bi bi-telephone-fill me-2 text-purple-600"></i>
                                    <span class="text-muted small">@clinic.Phone</span>
                                </div>
                                <div class="mb-2 d-flex align-items-center">
                                    <i class="bi bi-envelope-fill me-2 text-purple-600"></i>
                                    <span class="text-muted small">@clinic.Email</span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex gap-2">
                                <a href="#" class="btn btn-sm btn-gradient-purple-pink text-white w-100">
                                    <i class="bi bi-calendar-check me-1"></i>Đặt lịch
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-purple w-100">
                                    <i class="bi bi-geo me-1"></i>Chỉ đường
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card shadow bg-white bg-opacity-75 p-5 text-center">
                <div class="mb-3">
                    <i class="bi bi-hospital fs-1 text-muted"></i>
                </div>
                <h4 class="text-dark mb-2">Không có phòng khám nào</h4>
                <p class="text-muted">Hệ thống hiện chưa có dữ liệu về phòng khám.</p>
                <a href="#" class="btn btn-gradient-purple-pink text-white">
                    <i class="bi bi-plus-lg me-1"></i>Thêm phòng khám mới
                </a>
            </div>
        }

        <!-- Stats -->
        <div class="mt-5 rounded-4 p-5 shadow bg-white bg-opacity-50">
            <div class="row text-center g-4">
                <div class="col-md">
                    <h3 class="fw-bold text-purple-600">@Model.Clinics.Count+</h3>
                    <p class="text-muted">Phòng khám đối tác</p>
                </div>
                <div class="col-md">
                    <h3 class="fw-bold text-pink-600">4.8★</h3>
                    <p class="text-muted">Đánh giá trung bình</p>
                </div>
                <div class="col-md">
                    <h3 class="fw-bold text-blue-600">24/7</h3>
                    <p class="text-muted">Hỗ trợ khách hàng</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient-purple-pink {
        background: linear-gradient(to right, #9333ea, #ec4899);
        border: none;
    }

    .btn-outline-purple {
        border-color: #9333ea;
        color: #9333ea;
    }

        .btn-outline-purple:hover {
            background-color: #f3e8ff;
        }

    .text-purple-600 {
        color: #9333ea !important;
    }

    .text-pink-600 {
        color: #ec4899 !important;
    }

    .text-blue-600 {
        color: #3b82f6 !important;
    }
</style>
