@page
@model GenderHealthcareServiceManagementSystemPages.Pages.UnauthorizedModel
@{
    ViewData["Title"] = "Không có quyền truy cập";
}

<main class="unauthorized-page">
    <div class="container">
        <!-- Background Elements -->
        <div class="background-elements">
            <div class="floating-shape shape-1"></div>
            <div class="floating-shape shape-2"></div>
            <div class="floating-shape shape-3"></div>
            <div class="floating-shape shape-4"></div>
        </div>

        <!-- Main Content -->
        <div class="unauthorized-content">
            <!-- Error Icon -->
            <div class="error-icon">
                <div class="icon-container">
                    <i class="bi bi-shield-exclamation"></i>
                </div>
                <div class="pulse-ring"></div>
            </div>

            <!-- Error Message -->
            <div class="error-message">
                <h1 style="color: #FE2020 !important">403</h1>
                <h2>Không có quyền truy cập</h2>
                <p>Xin lỗi, bạn không có quyền truy cập vào trang này. Vui lòng liên hệ quản trị viên hoặc quay lại trang chủ.</p>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i>
                    Về trang chủ
                </a>
                <button type="button" class="btn btn-secondary" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i>
                    Quay lại
                </button>

            </div>

            <!-- Additional Info -->
            <div class="additional-info">
                <div class="info-card">
                    <div class="info-icon">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <div class="info-content">
                        <h3>Có thể bạn cần:</h3>
                        <ul>
                            <li>Đăng nhập với tài khoản có quyền phù hợp</li>
                            <li>Liên hệ quản trị viên để được cấp quyền</li>
                            <li>Kiểm tra lại URL bạn đang truy cập</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="quick-links">
                <h3>Liên kết hữu ích</h3>
                <div class="links-grid">
                    <a href="/services" class="quick-link">
                        <i class="bi bi-heart-pulse"></i>
                        <span>Dịch vụ</span>
                    </a>
                    <a href="/ExpertConsultation/Booking/BookingConsultant" class="quick-link">
                        <i class="bi bi-calendar-check"></i>
                        <span>Đặt lịch</span>
                    </a>
                    <a href="/faqs" class="quick-link">
                        <i class="bi bi-question-circle"></i>
                        <span>FAQ</span>
                    </a>
                    <a href="/AboutUs" class="quick-link">
                        <i class="bi bi-info-square"></i>
                        <span>Về chúng tôi</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    /* Main Layout */
    .unauthorized-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #FFD6FF 0%, #E7C6FF 25%, #C8B6FF 50%, #C2C9FF 75%, #BBD0FF 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
        position: relative;
        z-index: 2;
    }

    .background-elements {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
    }

    .floating-shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        animation: float 6s ease-in-out infinite;
    }

    .shape-1 {
        width: 100px;
        height: 100px;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 150px;
        height: 150px;
        top: 20%;
        right: 15%;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 80px;
        height: 80px;
        bottom: 20%;
        left: 20%;
        animation-delay: 4s;
    }

    .shape-4 {
        width: 120px;
        height: 120px;
        bottom: 15%;
        right: 10%;
        animation-delay: 1s;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
    }

    }

    .unauthorized-content {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 3rem;
        text-align: center;
        box-shadow: 0 20px 40px rgba(255, 128, 128, 0.3);
        border: 1px solid rgba(255, 204, 204, 0.5);
        position: relative;
    }

    .error-icon {
        position: relative;
        margin-bottom: 2rem;
        display: inline-block;
    }

    .icon-container {
        width: 120px;
        height: 120px;
        background: #D62828;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: white;
        position: relative;
        z-index: 2;
        animation: bounce 2s infinite;
    }

    .pulse-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120px;
        height: 120px;
        border: 3px solid #FFB3B3;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100%

    {
        transform: translateY(0);
    }

    40% {
        transform: translateY(-10px);
    }

    60% {
        transform: translateY(-5px);
    }

    }

    @@keyframes pulse {
        0%

    {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }

    100% {
        transform: translate(-50%, -50%) scale(1.5);
        opacity: 0;
    }

    }

    .error-message {
        margin-bottom: 2.5rem;
    }

        .error-message h1 {
            font-size: 6rem;
            font-weight: 900;
            background: linear-gradient(135deg, #FF4D4D, #FF1A1A);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
            line-height: 1;
        }

        .error-message h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #4A4A4A;
            margin-bottom: 1rem;
        }

        .error-message p {
            font-size: 1.125rem;
            color: #6B6B6B;
            line-height: 1.6;
            max-width: 500px;
            margin: 0 auto;
        }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

    .btn-primary {
        background: linear-gradient(135deg, #FF4D4D, #FF1A1A);
        color: white;
        box-shadow: 0 4px 15px rgba(255, 77, 77, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 77, 77, 0.5);
        }

    .btn-secondary {
        background: rgba(255, 204, 204, 0.3);
        color: #4A4A4A;
        border: 1px solid rgba(255, 204, 204, 0.5);
    }

        .btn-secondary:hover {
            background: rgba(255, 204, 204, 0.5);
            transform: translateY(-2px);
        }

    .btn-outline {
        background: transparent;
        color: #FF4D4D;
        border: 2px solid #FF4D4D;
    }

        .btn-outline:hover {
            background: #FF4D4D;
            color: white;
            transform: translateY(-2px);
        }

    .additional-info {
        margin-bottom: 2rem;
    }

    .info-card {
        background: rgba(255, 204, 204, 0.3);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        text-align: left;
        border: 1px solid rgba(255, 204, 204, 0.5);
    }

    .info-icon {
        width: 2.5rem;
        height: 2.5rem;
        background: linear-gradient(135deg, #FFA3A3, #FF4D4D);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .info-content h3 {
        color: #4A4A4A;
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .info-content ul {
        color: #6B6B6B;
        margin: 0;
        padding-left: 1.25rem;
    }

    .info-content li {
        margin-bottom: 0.5rem;
        line-height: 1.5;
    }

    .quick-links {
        text-align: center;
    }

        .quick-links h3 {
            color: #4A4A4A;
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
    }

    .quick-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        background: rgba(255, 204, 204, 0.2);
        border-radius: 12px;
        text-decoration: none;
        color: #4A4A4A;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 204, 204, 0.3);
    }

        .quick-link:hover {
            background: rgba(255, 204, 204, 0.4);
            transform: translateY(-2px);
            color: #4A4A4A;
        }

        .quick-link i {
            font-size: 1.5rem;
            color: #FF4D4D;
        }

        .quick-link span {
            font-size: 0.875rem;
            font-weight: 500;
        }

    @@media (max-width: 768px) {
        .unauthorized-content

    {
        padding: 2rem 1.5rem;
    }

    .error-message h1 {
        font-size: 4rem;
    }

    .error-message h2 {
        font-size: 1.5rem;
    }

    .action-buttons {
        flex-direction: column;
        align-items: center;
    }

    .btn {
        width: 100%;
        max-width: 250px;
        justify-content: center;
    }

    .info-card {
        flex-direction: column;
        text-align: center;
    }

    .links-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .floating-shape {
        display: none;
    }

    }

    @@media (max-width: 480px) {
        .container

    {
        padding: 0 0.5rem;
    }

    .unauthorized-content {
        padding: 1.5rem 1rem;
    }

    .error-message h1 {
        font-size: 3rem;
    }

    .icon-container {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }

    .pulse-ring {
        width: 80px;
        height: 80px;
    }

    }

    .btn.loading {
        pointer-events: none;
        opacity: 0.7;
    }

        .btn.loading::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            margin: auto;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
    @@keyframes spin {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add loading state to buttons
        const buttons = document.querySelectorAll('.btn');

        buttons.forEach(button => {
            if (button.tagName === 'A' && button.href) {
                button.addEventListener('click', function() {
                    this.classList.add('loading');
                });
            }
        });

        // let countdown = 10;
        // const autoRedirect = setInterval(() => {
        //     countdown--;
        //     if (countdown <= 0) {
        //         clearInterval(autoRedirect);
        //         window.location.href = '/';
        //     }
        // }, 1000);

        document.addEventListener('keydown', function(e) {
            // Press 'H' to go home
            if (e.key === 'h' || e.key === 'H') {
                window.location.href = '/';
            }

            // Press 'B' to go back
            if (e.key === 'b' || e.key === 'B') {
                history.back();
            }

            // Press 'C' to contact
            if (e.key === 'c' || e.key === 'C') {
                window.location.href = '/contact';
            }
        });

        // Add entrance animation
        const content = document.querySelector('.unauthorized-content');
        content.style.opacity = '0';
        content.style.transform = 'translateY(20px)';

        setTimeout(() => {
            content.style.transition = 'all 0.6s ease';
            content.style.opacity = '1';
            content.style.transform = 'translateY(0)';
        }, 100);
    });
</script>
