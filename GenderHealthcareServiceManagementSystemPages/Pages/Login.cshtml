@page
@model GenderHealthcareServiceManagementSystemPages.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<main class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-4" style="backdrop-filter: blur(8px); background-color: rgba(255, 255, 255, 0.8);">
                    <div class="text-center mb-4 " >
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="text-purple-600 d-block mx-auto" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                        </svg>
                        <h2 class="h4 fw-bold gradient-text mt-3">Đăng nhập</h2>
                        <p class="text-muted small">Chào mừng bạn quay lại với Gender Healthcare!</p>
                    </div>
                    <form method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn w-100 mb-3" style="background: linear-gradient(to right, #9333ea, #ec4899); color: white;">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Đăng nhập
                        </button>
                        <div class="text-center">
                            <a href="/Register" class="btn btn-outline-secondary w-100" style="border-color: #9333ea; color: #9333ea;">
                                <i class="bi bi-person-plus-fill me-2"></i> Đăng ký
                            </a>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <p class="text-center text-danger mt-3">@Model.Message</p>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}