@page
@model GenderHealthcareServiceManagementSystemPages.Pages.ManageBlog.AdminManagerBlogsModel
@{
    ViewData["Title"] = "Quản lý Blog";
}

<main class="py-4">
    <div class="container">
        <h2 class="h4 text-primary mb-4">📚 Danh sách bài viết Blog</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <a asp-page="./CreateNewBlog" class="btn btn-primary mb-3">➕ Tạo bài viết mới</a>

        @if (Model.Blogs.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Tiêu đề</th>
                        <th>Tác giả</th>
                        <th>Ngày tạo</th>
                        <th>Cập nhật</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model.Blogs)
                    {
                        <tr>
                            <td>@blog.BlogId</td>
                            <td>@blog.Title</td>
                            <td>@blog.Author?.Username</td>
                            <td>@(blog.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa xác định")</td>
                            <td>@blog.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="d-flex gap-1">
                                <a asp-page="/ManageBlog/EditBlog" asp-route-id="@blog.BlogId" class="btn btn-sm btn-warning">✏️ Sửa</a>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@blog.BlogId" onsubmit="return confirm('Bạn có chắc chắn muốn xóa blog này?');">
                                    <button type="submit" class="btn btn-sm btn-danger">🗑️ Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">Chưa có bài viết blog nào.</div>
        }
    </div>
</main>
