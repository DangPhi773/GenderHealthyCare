@page
@model GenderHealthcareServiceManagementSystemPages.Pages.ServiceManagement.DetailsModel
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<main class="details-service-page">
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <div class="breadcrumb">
                <a asp-page="./Index">Quản lý dịch vụ</a>
                <span>/</span>
                <span>Chi tiết</span>
            </div>
            <h1>Chi tiết dịch vụ</h1>
        </div>

        <!-- Service Details Card -->
        <div class="details-card">
            <!-- Card Header -->
            <div class="card-header_detail">
                <div class="service-icon">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <div class="header-info">
                    <h2>@Model.Service.Name</h2>
                    <div class="status-badge @(Model.Service.IsDeleted ? "inactive" : "active")">
                        @if (Model.Service.IsDeleted)
                        {
                            <i class="bi bi-x-circle"></i>
                            <span>Tạm dừng</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle"></i>
                            <span>Hoạt động</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Card Content -->
            <div class="card-content">
                <div class="details-grid">
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-file-text"></i>
                            Mô tả dịch vụ
                        </div>
                        <div class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.Service.Description))
                            {
                                <p>@Model.Service.Description</p>
                            }
                            else
                            {
                                <p class="no-data">Chưa có mô tả</p>
                            }
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-currency-dollar"></i>
                            Giá dịch vụ
                        </div>
                        <div class="detail-value price">
                            @Model.Service.Price.ToString("N0") VND
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-calendar-plus"></i>
                            Ngày tạo
                        </div>
                        <div class="detail-value">
                            @Model.Service.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-info-circle"></i>
                            Trạng thái
                        </div>
                        <div class="detail-value">
                            @if (Model.Service.IsDeleted)
                            {
                                <span class="status-text inactive">Dịch vụ đã tạm dừng</span>
                            }
                            else
                            {
                                <span class="status-text active">Dịch vụ đang hoạt động</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card Actions -->
            <div class="card-actions">
                <a asp-page="./Edit" asp-route-id="@Model.Service.ServiceId" class="btn btn-primary">
                    <i class="bi bi-pencil"></i>
                    Chỉnh sửa
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</main>

<style>
    /* Main Layout */
    .details-service-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 2rem 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Header */
    .page-header {
        margin-bottom: 2rem;
    }

    .breadcrumb {
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 0.5rem;
    }

        .breadcrumb a {
            color: #7c3aed;
            text-decoration: none;
        }

            .breadcrumb a:hover {
                text-decoration: underline;
            }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    /* Details Card */
    .details-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    /* Card Header */
    .card-header_detail {
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .service-icon {
        width: 4rem;
        height: 4rem;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        flex-shrink: 0;
    }

    .header-info {
        flex: 1;
    }

        .header-info h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .status-badge.active {
            background: rgba(16, 185, 129, 0.2);
            color: #d1fae5;
        }

        .status-badge.inactive {
            background: rgba(239, 68, 68, 0.2);
            color: #fee2e2;
        }

    /* Card Content */
    .card-content {
        padding: 2rem;
    }

    .details-grid {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        background: #f8fafc;
        border-radius: 8px;
        border-left: 4px solid #7c3aed;
    }

    .detail-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #374151;
        font-size: 0.875rem;
    }

        .detail-label i {
            color: #7c3aed;
        }

    .detail-value {
        color: #1e293b;
        font-size: 0.875rem;
        line-height: 1.5;
    }

        .detail-value p {
            margin: 0;
        }

        .detail-value.price {
            font-size: 1.25rem;
            font-weight: 700;
            color: #059669;
        }

    .no-data {
        color: #64748b;
        font-style: italic;
    }

    .status-text.active {
        color: #059669;
        font-weight: 500;
    }

    .status-text.inactive {
        color: #dc2626;
        font-weight: 500;
    }

    /* Card Actions */
    .card-actions {
        padding: 1.5rem 2rem;
        background: #f8fafc;
        border-top: 1px solid #e2e8f0;
        display: flex;
        gap: 1rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background-color: #7c3aed;
        color: white;
    }

        .btn-primary:hover {
            background-color: #6d28d9;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: white;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

        .btn-secondary:hover {
            background-color: #f8fafc;
            color: #475569;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .container

    {
        padding: 0 0.5rem;
    }

    .card-header_detail {
        padding: 1.5rem;
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .card-content {
        padding: 1.5rem;
    }

    .card-actions {
        padding: 1rem 1.5rem;
        flex-direction: column;
    }

    .page-header h1 {
        font-size: 1.5rem;
    }

    .service-icon {
        width: 3rem;
        height: 3rem;
        font-size: 1.5rem;
    }

    .header-info h2 {
        font-size: 1.25rem;
    }

    }
</style>