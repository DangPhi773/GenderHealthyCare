@page
@model GenderHealthcareServiceManagementSystemPages.Pages.Clinics.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: linear-gradient(to bottom right, #f9f3ff, #ffeaf7, #ebf0ff);
    }
    .card-decor{
        border-radius: 8px;
        border: 2px solid #c3c6ce;
        transition: 0.5s ease-out;
    }
    .card-decor:hover{
        border-color: #C8B6FF;
        /* box-shadow: 0 4px 18px 0 rgba(0, 0, 0, 0.25); */
            box-shadow: 0 4px 18px 0 rgba(143, 117, 223, 0.25);
    }
    .card-button {
         transform: translate(-50%, 125%);
         width: 40%;
         border-radius: 1rem;
         border: none;
         background: linear-gradient(to right, #9333ea, #ec4899);
         color: #fff;
         font-size: 1rem;
         padding: .2rem 1rem;
         position: absolute;
         left: 50%;
         bottom: 0;
         opacity: 0;
         transition: 0.3s ease-out;
    }

    .gradient-text {
        background: linear-gradient(to right, #9333ea, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
    }

    .card-all:hover .card-button {
        transform: translate(-50%, 50%);
        opacity: 1;
        color:white;
    }

    .btn-decor {
        background-color: white;
        color: #9333ea;
        border: 1px solid #ced4da;
        transition: all 0.2s ease;
    }

    .btn-decor:hover {
        border-color: transparent;
        color: white;
        background: linear-gradient(to right, #9333ea, #ec4899);
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3 col-12">
    <h1 class="gradient-text" style="padding:5px">Cơ sở y tế</h1>

    <div class="col-4 d-flex justify-content-end">
        <form method="get" class="d-flex align-items-center col-8 me-3">
        <input type="text" name="ClinicName" class="form-control" placeholder="Tìm kiếm..."
               value="@Request.Query["ClinicName"]" />
        <button type="submit" class="btn btn-decor"><i class="bi bi-search-heart"></i></button>
        </form>
        <a asp-page="Create" class="text-decoration-none btn-decor col-3 p-1 " style="text-align:center;border-radius:8px">
            <i class="bi bi-plus-lg"></i> Tạo mới
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.Clinic)
    {
        <div class="col-md-4 mb-4 d-flex">
            <partial name="_ClinicCard" model="item" />
        </div>
    }
</div>