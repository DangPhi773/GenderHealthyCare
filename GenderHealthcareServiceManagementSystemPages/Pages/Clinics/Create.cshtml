@page
@model GenderHealthcareServiceManagementSystemPages.Pages.Clinics.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background: linear-gradient(to bottom right, #f9f3ff, #ffeaf7, #ebf0ff);
        font-size: 20px;
    }

    .icon-decor {
        height: 40px;
        width: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .input {
        padding: 5px 10px;
        border-radius: 12px;
        border: 1.5px solid lightgrey;
        outline: none;
        transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
        box-shadow: 0px 0px 20px -18px;
    }

    .input:hover {
        border: 2px solid lightgrey;
        box-shadow: 0px 0px 20px -17px;
    }

    .input:active {
        transform: scale(0.95);
    }

    .input:focus {
        border: 2px solid grey;
    }

    .btn-decor {
        background: white;
        color: #9333ea;
        border: 1px solid #ced4da;
        transition: all 0.2s ease;
    }

    .btn-decor:hover {
        border-color: transparent;
        color: white;
        background: linear-gradient(to right, #9333ea, #ec4899);
    }

    .gradient-text {
        background: linear-gradient(to right, #9333ea, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
    }

</style>

<div class="col-12 d-flex justify-content-between align-items-center mb-2">
    <h1 class="gradient-text">Tạo Mới</h1>
    <a asp-page="Index"
       class="text-decoration-none p-1 col-1 btn-close">
    </a>
</div>

<hr />

<div class="mb-4 mt-4 card-decor">

    <div class="row">
        <form method="post"
              asp-page-handler=""
              class="col-12 d-flex flex-column align-items-end">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-evenly col-12">
                <!-- Hình đại diện -->
                <div class="rounded col-4" style=" height:450px;border:2px solid black">
                    <img src=""
                         alt="Clinic Image"
                         class="img-fluid rounded"
                         style="width: 100%; height: 100%; object-fit: cover;" />
                </div>

                <!-- Thông tin -->
                <div class="text-start col-7" style="padding:0">

                    <div class="row">
                        @* Name *@
                        <div class="mb-1 small text-truncate d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <div class="icon-decor col-3" style="background:#CEF4FF">
                                    <i class="bi bi-suit-heart"></i>
                                </div>
                                <label asp-for="Clinic.Name" class="control-label">Tên cơ sở y tế</label>
                            </div>
                            <input asp-for="Clinic.Name"
                                   class="input"
                                   type="text" />
                            <div class="col-11">
                                <span asp-validation-for="Clinic.Name" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        @* Phone *@
                        <div class="mb-1 small text-truncate d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <div class="icon-decor col-3" style="background:#CEF4FF">
                                    <i class="bi bi-telephone"></i>
                                </div>
                                <label asp-for="Clinic.Phone" class="control-label">Số điện thoại</label>
                            </div>
                            <input asp-for="Clinic.Phone"
                                   class="input"
                                   type="text" />
                            <div class="col-11">
                                <span asp-validation-for="Clinic.Phone" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        @* Email *@
                        <div class="mb-1 small text-truncate d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <div class="icon-decor col-3" style="background:#FFCDDE">
                                    <i class="bi bi-envelope-at"></i>
                                </div>
                                <label asp-for="Clinic.Email" class="control-label"></label>
                            </div>
                            <input asp-for="Clinic.Email"
                                   class="input"
                                   type="text" />
                            <div class="col-11">
                                <span asp-validation-for="Clinic.Email" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        @* Address *@
                        <div class="mb-1 small text-truncate d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <div class="icon-decor col-3" style="background:#C8B6FF">
                                    <i class="bi bi-house-door"></i>
                                </div>
                                <label asp-for="Clinic.Address" class="control-label">Địa chỉ cơ sở</label>
                            </div>
                            <input asp-for="Clinic.Address"
                                   class="input"
                                   type="text" />
                            <div class="col-11">
                                <span asp-validation-for="Clinic.Address" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        @* Description *@
                        <div class="mb-0 small text-truncate">
                            <div class="d-flex align-items-center">
                                <div class="icon-decor col-3" style="background:#C8B6FF">
                                    <i class="bi bi-vector-pen"></i>
                                </div>
                                <label asp-for="Clinic.Description" class="control-label">Mô tả thêm</label>
                            </div>
                            <textarea asp-for="Clinic.Description"
                                      class="col-12 input"
                                      style="resize:none;height:150px;"></textarea>
                        </div>
                        <div class="col-12 d-flex justify-content-center">
                            <button style="border:none"
                                    type="submit"
                                    class="btn btn-light btn-decor col-4 d-flex align-items-center justify-content-center">
                                <i class="bi bi-plus-lg"></i> Tạo mới
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
