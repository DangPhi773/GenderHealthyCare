@page
@model GenderHealthcareServiceManagementSystemPages.Pages.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<main class="zpy-5 px-4 px-md-5" style="background: linear-gradient(to bottom right, #f5f3ff, #fdf2f8, #e0f2fe); min-height: 100vh;">
    <div class="container px-4 mx-auto" style="max-width: 1400px;">
        <div class="max-w-4xl mx-auto">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <!-- Header Section -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center px-4 py-2 bg-purple-100 rounded-pill mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" class="mr-2 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                    </svg>
                    <span class="fs-4 fw-bold gradient-text">Gender Healthcare System</span>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Hồ sơ cá nhân</h1>
                <p class="text-gray-600">Thông tin chi tiết của bạn tại Gender Healthcare</p>
            </div>

            @if (Model.User != null)
            {
                <form method="post">
                    <div class="row row-cols-1 row-cols-lg-3 g-4">
                    <!-- Profile Card -->
                    <div class="col col-lg-4">
                        <div class="card border-0 shadow-lg bg-white bg-opacity-80" style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);">
                            <div class="card-body p-4 text-center">
                                <!-- Avatar -->
                                <div class="position-relative mb-4">
                                    <div class="mx-auto rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 120px; height: 120px; background: linear-gradient(to bottom right, #9333ea, #ec4899);">
                                        <i class="bi bi-person fs-3 text-white"></i>
                                    </div>
                                    <div class="position-absolute bottom-0 end-0 w-8 h-8 bg-green-500 rounded-circle border-4 border-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        <i class="bi bi-check-circle-fill text-white" style="font-size: 16px;"></i>
                                    </div>
                                </div>

                                <!-- Basic Info -->
                                <h2 class="h5 font-bold text-gray-900 mb-2">@(Model.User.FullName ?? "Chưa cập nhật")</h2>
                                <p class="text-gray-600 mb-4">@@@(Model.User.Username)</p>

                                <!-- Role Badge -->
                                <span class="badge text-white px-4 py-2 text-sm font-medium mb-4" style="background: linear-gradient(to right, #9333ea, #ec4899);">
                                    <i class="bi bi-shield-fill-check me-2"></i> @Model.User.Role
                                </span>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <a href="/MenstrualCycle" class="btn w-100 text-white" style="background: linear-gradient(to right, #ec4899, #f472b6); border: none;">
                                        <i class="bi bi-droplet-half me-2"></i> Quản lý chu kỳ kinh nguyệt
                                    </a>
                                    <button type="submit" class="btn btn-primary w-100" style="background: linear-gradient(to right, #9333ea, #ec4899); border: none;">
                                        <i class="bi bi-pencil-square me-2"></i> Lưu hồ sơ
                                    </button>
                                    <a href="/Profile?handler=Logout" class="btn btn-outline-danger text-red-600 border-red-200 bg-transparent w-100">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Details Section -->
                    <div class="col col-lg-8">
                        <!-- Personal Information -->
                        <div class="card border-0 shadow-lg bg-white bg-opacity-80 mb-4" style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);">
                            <div class="card-header bg-transparent pb-0">
                                <h3 class="h6 font-semibold text-gray-900 d-flex align-items-center">
                                    <i class="bi bi-person me-2 text-purple-600"></i> Thông tin cá nhân
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-md-2 g-4">
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 bg-gray-50 rounded-3">
                                            <i class="bi bi-person text-purple-600 me-3 fs-5"></i>
                                            <div class="w-100">
                                                <p class="text-sm text-gray-600 mb-1">Họ và tên</p>
                                                <input type="text" class="form-control" name="FullName" value="@(Model.User.FullName ?? "")" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 bg-gray-50 rounded-3">
                                            <i class="bi bi-envelope text-purple-600 me-3 fs-5"></i>
                                            <div class="w-100">
                                                <p class="text-sm text-gray-600 mb-1">Email</p>
                                                <input type="email" class="form-control" name="Email" value="@Model.User.Email" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 bg-gray-50 rounded-3">
                                            <i class="bi bi-telephone text-purple-600 me-3 fs-5"></i>
                                            <div class="w-100">
                                                <p class="text-sm text-gray-600 mb-1">Số điện thoại</p>
                                                <input type="text" class="form-control" name="Phone" value="@(Model.User.Phone ?? "")" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 bg-gray-50 rounded-3">
                                            <i class="bi bi-person-gender text-purple-600 me-3 fs-5"></i>
                                            <div class="w-100">
                                                <p class="text-sm text-gray-600 mb-1">Giới tính</p>
                                                <select class="form-select" name="Gender" required>
                                                    <option value="" disabled selected>Chọn giới tính</option>
                                                    <option value="Nam" selected="@(Model.User.Gender == "Male")">Nam</option>
                                                    <option value="Nữ" selected="@(Model.User.Gender == "Female")">Nữ</option>
                                                    <option value="Khác" selected="@(Model.User.Gender == "Other")">Khác</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 bg-gray-50 rounded-3">
                                            <i class="bi bi-calendar text-purple-600 me-3 fs-5"></i>
                                            <div class="w-100">
                                                <p class="text-sm text-gray-600 mb-1">Ngày sinh</p>
                                                <input type="date" class="form-control" name="Dob" value="@(Model.User.Dob?.ToString("yyyy-MM-dd") ?? "")" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="card border-0 shadow-lg bg-white bg-opacity-80 mb-4" style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); margin-bottom: 1rem;">
                            <div class="card-header bg-transparent pb-0">
                                <h3 class="h6 font-semibold text-gray-900 d-flex align-items-center">
                                    <i class="bi bi-shield-fill-check me-2 text-purple-600"></i> Thông tin tài khoản
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-md-2 g-4">
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 rounded-3 border" style="background: linear-gradient(to right, #f5f3ff, #fdf2f8); border-color: #e9d5ff;">
                                            <i class="bi bi-clock text-purple-600 me-3 fs-5"></i>
                                            <div>
                                                <p class="text-sm text-gray-600 mb-1">Ngày tạo</p>
                                                <p class="font-medium text-gray-900">@Model.User.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center p-3 rounded-3 border" style="@((Model.User.Role == "Guest" ? "background: #e5e7eb; border-color: #d1d5db;" :
                                                                                                               Model.User.Role == "Customer" ? "background: #bfdbfe; border-color: #93c5fd;" :
                                                                                                               Model.User.Role == "Consultant" ? "background: #d1fae5; border-color: #a7f3d0;" :
                                                                                                               Model.User.Role == "Staff" ? "background: #fefcbf; border-color: #fde047;" :
                                                                                                               Model.User.Role == "Manager" ? "background: #fed7aa; border-color: #fdba74;" :
                                                                                                               "background: #fee2e2; border-color: #fecaca;"))">
                                            <i class="bi" style="margin-right: 1rem; font-weight:400; font-size: 1.25rem; @((Model.User.Role == "Guest" ? "color: #4b5563;" :
                                                                                                                              Model.User.Role == "Customer" ? "color: #1e40af;" :
                                                                                                                              Model.User.Role == "Consultant" ? "color: #065f46;" :
                                                                                                                              Model.User.Role == "Staff" ? "color: #854d0e;" :
                                                                                                                              Model.User.Role == "Manager" ? "color: #c2410c;" :
                                                                                                                              "color: #dc2626;"))" class="@((Model.User.Role == "Guest" ? "bi-person" :
                                                                                                                                                              Model.User.Role == "Customer" ? "bi-person-heart" :
                                                                                                                                                              Model.User.Role == "Consultant" ? "bi-chat-square-text" :
                                                                                                                                                              Model.User.Role == "Staff" ? "bi-person-workspace" :
                                                                                                                                                              Model.User.Role == "Manager" ? "bi-person-gear" :
                                                                                                                                                              "bi-shield-lock"))"></i>
                                            <div>
                                                <p class="text-sm text-gray-600 mb-1">Vai trò</p>
                                                <p class="font-medium" style="@((Model.User.Role == "Guest" ? "color: #4b5563;" :
                                                                                  Model.User.Role == "Customer" ? "color: #1e40af;" :
                                                                                  Model.User.Role == "Consultant" ? "color: #065f46;" :
                                                                                  Model.User.Role == "Staff" ? "color: #854d0e;" :
                                                                                  Model.User.Role == "Manager" ? "color: #c2410c;" :
                                                                                  "color: #dc2626;"))">@Model.User.Role</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Stats -->
                            <div class="card border-0 shadow-lg text-white mt-4" style="background: linear-gradient(to right, #9333ea, #ec4899);">
                                <div class="card-body p-5">
                                    <h3 class="h6 font-semibold text-white mb-4 d-flex align-items-center">
                                        <i class="bi bi-heart-fill me-2"></i> Thống kê nhanh
                                    </h3>
                                    <div class="row row-cols-3 text-center">
                                        <div class="col">
                                            <div class="fs-4 font-bold mb-1">5</div>
                                            <div class="text-sm opacity-90">Lịch hẹn</div>
                                        </div>
                                        <div class="col">
                                            <div class="fs-4 font-bold mb-1">12</div>
                                            <div class="text-sm opacity-90">Dịch vụ đã sử dụng</div>
                                        </div>
                                        <div class="col">
                                            <div class="fs-4 font-bold mb-1">3</div>
                                            <div class="text-sm opacity-90">Phòng khám yêu thích</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center">
                    <p class="text-danger mb-4">Không tìm thấy thông tin người dùng. Vui lòng đăng nhập lại.</p>
                    <a href="/Login" class="btn btn-primary w-100 w-md-auto" style="background: linear-gradient(to right, #9333ea, #ec4899); border: none;">
                        <i class="bi bi-person-circle me-2"></i> Đăng nhập
                    </a>
                </div>
            }
            </div>
        
    </div>
</main>