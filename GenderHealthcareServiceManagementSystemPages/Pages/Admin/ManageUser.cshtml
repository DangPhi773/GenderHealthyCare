@page
@model GenderHealthcareServiceManagementSystemPages.Pages.Admin.ManageUser

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <h2 class="page-title">Manage Users</h2>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h3>Users List</h3>
            <p class="description">View and manage users in the healthcare system.</p>
        </div>
        <div class="card-content">
            <table class="user-table">
                <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Date Created</th>
                    <th class="text-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@user.CreatedAt?.ToString("MM/dd/yyyy")</td>
                        <td class="text-right">
                            <a href="@Url.Page("EditUser", new { id = user.UserId })" class="btn-edit">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn-delete" onclick="deleteUser(@user.UserId)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add New User Button -->
    <div class="card">
        <div class="card-content">
            <a href="@Url.Page("CreateUser")" class="btn-add">
                <i class="bi bi-person-plus"></i> Add New User
            </a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Dashboard.css" />
}

