@page
@model GenderHealthcareServiceManagementSystemPages.Pages.Admin.UserManager.CreateModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New User</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="User.FullName" class="form-label"></label>
                    <input asp-for="User.FullName" class="form-control" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Username" class="form-label"></label>
                    <input asp-for="User.Username" class="form-control" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.PasswordHash" class="form-label"></label>
                    <input asp-for="User.PasswordHash" class="form-control" type="password" />
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label"></label>
                    <input asp-for="User.Email" class="form-control" type="email" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="User.Gender" class="form-label"></label>
                        <select asp-for="User.Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="User.Gender" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="User.Dob" class="form-label"></label>
                        <input asp-for="User.Dob" class="form-control" type="date" />
                        <span asp-validation-for="User.Dob" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Phone" class="form-label"></label>
                    <input asp-for="User.Phone" class="form-control" />
                    <span asp-validation-for="User.Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Role" class="form-label"></label>
                    <select asp-for="User.Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option>Admin</option>
                        <option>Consultant</option>
                        <option>Customer</option>
                    </select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
