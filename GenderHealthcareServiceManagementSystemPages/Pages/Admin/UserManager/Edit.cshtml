                        <label asp-for="User.Email" class="form-label fw-bold"></label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.FullName" class="form-label fw-bold"></label>
                        <input asp-for="User.FullName" class="form-control" />
                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Phone" class="form-label fw-bold"></label>
                        <input asp-for="User.Phone" class="form-control" />
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.CreatedAt" class="form-label fw-bold"></label>
                        <input asp-for="User.CreatedAt" class="form-control" readonly />
                        <span asp-validation-for="User.CreatedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.UpdatedAt" class="form-label fw-bold"></label>
                        <input asp-for="User.UpdatedAt" class="form-control" readonly />
                        <span asp-validation-for="User.UpdatedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.IsDeleted" class="form-label fw-bold"></label>
                        <input asp-for="User.IsDeleted" class="form-control" />
                        <span asp-validation-for="User.IsDeleted" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
